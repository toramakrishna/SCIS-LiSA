{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Server",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api.main:app",
                "--reload",
                "--host", "0.0.0.0",
                "--port", "8000"
            ],
            "cwd": "${workspaceFolder}/src/backend",
            "env": {
                "DB_USER": "postgres",
                "DB_PASSWORD": "postgres",
                "DB_HOST": "localhost",
                "DB_PORT": "5432",
                "DB_NAME": "scislisa-service",
                "PYTHONPATH": "${workspaceFolder}/src/backend"
            },
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/src/backend/.venv/bin/python"
        },
        {
            "name": "FastAPI Server (Port 8080)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api.main:app",
                "--reload",
                "--host", "0.0.0.0",
                "--port", "8080"
            ],
            "cwd": "${workspaceFolder}/src/backend",
            "env": {
                "DB_USER": "postgres",
                "DB_PASSWORD": "postgres",
                "DB_HOST": "localhost",
                "DB_PORT": "5432",
                "DB_NAME": "scislisa-service",
                "PYTHONPATH": "${workspaceFolder}/src/backend"
            },
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/src/backend/.venv/bin/python"
        },
        {
            "name": "Run Ingestion Service",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/backend/services/ingestion_service.py",
            "cwd": "${workspaceFolder}/src/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src/backend"
            },
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}/src/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src/backend"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
